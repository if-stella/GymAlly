<div class="container">
  <% unless @chatroom.nil? %>
    <h1><%= current_user.first_name %>'s' Chats</h1>
    <ul>
      <% @chatrooms.each do |chatroom| %>
        <li><%= link_to "Chat of #{chatroom.friendship.user_one.first_name} & #{chatroom.friendship.user_two.first_name}", chatroom_path(chatroom) %></li>
      <% end %>
    </ul>
  <% else %>
    <h1> You do not have any chats yet</h1>
    <%= link_to "start browsing", users_path %>
  <% end %>
</div>
