<%# ---------- should be wrapped by div class="card-container" ------ %>
<div class="user-card">
  <%= cl_image_tag user.photo.key, class: "avatar-small" %>
  <div class="user-card-right">
    <div class="user-card-top">
      <div class="user-card-name gymally-semibold">
          <%= user.first_name %>
      </div>

    </div>
    <div class="user-card-bottom gymally-small">
      <%= description %>
    </div>
  </div>
  <div>
    <%= link_to "Accept", friendship_path(invitation), method: :patch %>
    <%= link_to 'Deny', delete_friendship_path(invitation),
                  method: :delete,
                  data: { confirm: "Are You sure you want to deny #{invitation.user_two.first_name}'s friendship request?" } %>
  </div>
</div>
