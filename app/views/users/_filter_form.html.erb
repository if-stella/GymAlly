<div data-controller="select2" >
  <%= simple_form_for :user, url: users_path, method: :get do |f| %>
    <div>
      <%= f.input :gender, collection: @genders.uniq, :required => false %>
      <%= f.input :sport, collection: @sports.uniq, :required => false, input_html: {multiple: true, data: {controller: 'select2', select2_options_value: {tags: true}}} %>
      <%= f.input :gym, collection: @gyms.uniq, :required => false %>
      <%= f.input :age1, :label => "Min. age", collection: @age, :required => false %>
      <%= f.input :age2, :label => "Max. age", collection: @age, :required => false %>
      <%= f.submit "Search" %>
    </div>
  <% end %>
</div>
